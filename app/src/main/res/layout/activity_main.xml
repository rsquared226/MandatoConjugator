<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="16dp"
	tools:context="com.rahulramkumar.mandatoconjugator.MainActivity">

	<EditText
		android:id="@+id/edit_infinitive"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:inputType="textNoSuggestions"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:orientation="horizontal">

		<Spinner
			android:id="@+id/spinner_subject"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_marginRight="32dp"
			android:layout_weight="1">
		</Spinner>

		<Switch
			android:id="@+id/switch_type"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="true"
			android:text="@string/affirmative"/>
	</LinearLayout>

	<Button
		android:id="@+id/btn_conjugate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="24dp"
		android:text="@string/conjugate"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="test"
		android:textAlignment="center"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

</LinearLayout>
